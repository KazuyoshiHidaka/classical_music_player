<% selected_song_id = yield(:songs_list_selected_song_id) %>
<% selected_song_id = nil if selected_song_id.blank? %>
<% selected_song = Song.find_by(id: selected_song_id) %>
<div id="songsListsSidebar" 
         class="d-none d-md-block col-md-5 col-lg-4 col-xl-3
                position-fixed h-100 overflow-auto">
  <%= render 'share/songs_lists/lists', selected_song: selected_song,
                                        all_songs_list_parent: params[:all_songs_list_parent],
                                        parent_container_name: "sidebar" %>
</div>
<div class="offset-md-5 offset-lg-4"></div>
<%= render 'share/modal_base', id: "songsListsModal", title: "曲を探す" do %>
  <%= render 'share/songs_lists/lists', selected_song: selected_song, 
                                        all_songs_list_parent: params[:all_songs_list_parent],
                                        parent_container_name: "modal" %>
<% end %>
