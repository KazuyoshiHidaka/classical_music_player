<% flash.each do |type, msg| %>
  <div class="alert alert-<%= bs_class_for_flash(type: type) %> alert-dismissable fade show">
    <%= msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
